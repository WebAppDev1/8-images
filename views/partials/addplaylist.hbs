<form class="ui stacked segment form" action="/dashboard/addplaylist" 
      method="POST"  enctype="multipart/form-data">
   <div class="four fields">
    <div class="field">
      <label>Title</label>
      <input placeholder="Title" type="text" name="title" required>
    </div>
    <div class="field">
      <label>Category</label>
      <input placeholder="Category" type="text" name="category" required>
    </div>
    <div class="field">
      <label>Rating</label>
      <input placeholder="Rating" type="number" name="rating">
    </div>
    <div class="field">
      <label>Image</label>
      <input placeholder="Image" type="file" name="picture" required>
    </div>
  </div>
   <button class="ui blue submit button">Add Playlist</button>
</form>
